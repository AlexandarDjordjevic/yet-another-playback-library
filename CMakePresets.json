{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 21,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "debug-linux",
            "inherits": "base",
            "displayName": "Debug (Linux/macOS)",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CXX_FLAGS_DEBUG": "-g3 -O0 -Wall -Wextra -Wpedantic -Werror"
            }
        },
        {
            "name": "release-linux",
            "inherits": "base",
            "displayName": "Release (Linux/macOS)",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build-release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_CXX_FLAGS_RELEASE": "-O3 -DNDEBUG"
            }
        },
        {
            "name": "debug-windows-msvc",
            "inherits": "base",
            "displayName": "Debug MSVC (Windows)",
            "generator": "Visual Studio 17 2022",
            "architecture": "x64",
            "binaryDir": "${sourceDir}/build-msvc",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
                "VCPKG_TARGET_TRIPLET": "x64-windows"
            }
        },
        {
            "name": "debug-windows-clang",
            "inherits": "base",
            "displayName": "Debug Clang (Windows)",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build-clang",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
                "VCPKG_TARGET_TRIPLET": "x64-windows"
            }
        },
        {
            "name": "coverage-linux",
            "inherits": "base",
            "displayName": "Coverage (Linux/macOS)",
            "description": "Build with code coverage instrumentation (gcov/lcov)",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build-coverage",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CXX_FLAGS_DEBUG": "-g -O0 --coverage -fprofile-arcs -ftest-coverage"
            }
        },
        {
            "name": "asan-linux",
            "inherits": "base",
            "displayName": "AddressSanitizer (Linux/macOS)",
            "description": "Build with AddressSanitizer to detect memory errors",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build-asan",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CXX_FLAGS_DEBUG": "-g -O1 -fsanitize=address -fno-omit-frame-pointer -fno-optimize-sibling-calls"
            }
        },
        {
            "name": "tsan-linux",
            "inherits": "base",
            "displayName": "ThreadSanitizer (Linux/macOS)",
            "description": "Build with ThreadSanitizer to detect data races",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build-tsan",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CXX_FLAGS_DEBUG": "-g -O1 -fsanitize=thread"
            }
        },
        {
            "name": "ubsan-linux",
            "inherits": "base",
            "displayName": "UndefinedBehaviorSanitizer (Linux/macOS)",
            "description": "Build with UBSan to detect undefined behavior",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build-ubsan",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CXX_FLAGS_DEBUG": "-g -O1 -fsanitize=undefined -fno-sanitize-recover=all"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "debug-linux",
            "configurePreset": "debug-linux"
        },
        {
            "name": "release-linux",
            "configurePreset": "release-linux"
        },
        {
            "name": "debug-windows-msvc",
            "configurePreset": "debug-windows-msvc"
        },
        {
            "name": "debug-windows-clang",
            "configurePreset": "debug-windows-clang"
        },
        {
            "name": "coverage-linux",
            "configurePreset": "coverage-linux"
        },
        {
            "name": "asan-linux",
            "configurePreset": "asan-linux"
        },
        {
            "name": "tsan-linux",
            "configurePreset": "tsan-linux"
        },
        {
            "name": "ubsan-linux",
            "configurePreset": "ubsan-linux"
        }
    ],
    "testPresets": [
        {
            "name": "debug-linux",
            "configurePreset": "debug-linux",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "release-linux",
            "configurePreset": "release-linux",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "debug-windows-msvc",
            "configurePreset": "debug-windows-msvc",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "debug-windows-clang",
            "configurePreset": "debug-windows-clang",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "coverage-linux",
            "configurePreset": "coverage-linux",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "asan-linux",
            "configurePreset": "asan-linux",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "tsan-linux",
            "configurePreset": "tsan-linux",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "ubsan-linux",
            "configurePreset": "ubsan-linux",
            "output": {
                "outputOnFailure": true
            }
        }
    ]
}
